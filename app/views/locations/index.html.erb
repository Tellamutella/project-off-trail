<div class="locations-bg" style="margin-top: 100px;">
  <!-- style search-bar later!!! -->
<div class="search-bar">
  <%= form_tag("/search", method: 'get', remote: true ) do %>
  <%= label_tag(:query, 'Search for:') %>
  <%= text_field_tag(:query)%>
  <span class="btn-search">
  <%= submit_tag("Find") %>
  </span>
  <% end %>
</div>
<!-- ### -->
  <div id="results"></div>
  <div class="map-center">
    <div id="map" style="width: 70%;
          height: 500px;" data-markers="<%= @markers.to_json %>"></div>
  </div>
  <div id="search_results_and_index">
    <%= render 'indexcards', locations: @locations %>
  </div>
  <% if policy(Location).create? %>
  <div class="btn-add">
    <%= link_to new_location_path do %>
    +
    <%end%>
  </div>
  <% end %>
</div>
