<div class="user">
    <header class="user__header">
        <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3219/logo.svg" alt="" />
        <h1 class="user__title">EXPLORE</h1>
    </header>

    <div class="form form__input">
      <%= simple_form_for [@user, @location] do |f| %>
        <%= f.input :name, label: 'Location Name', placeholder: "location name" %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%#= f.coordinates :coordinates %>
          <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :button, type: :submit do %>
          <%= icon('fas', 'check') %>
        <% end %>
      <% end %>
    </div>
</div>
