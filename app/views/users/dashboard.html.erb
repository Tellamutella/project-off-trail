<div class="container">
    <div class="dashboard-grid">
        <div class="user-info">
            <div class="user-avatar">
                <%= cl_image_tag @current.photo, class: 'img-circle' %>
            </div>
                <div class="user-info-text">
                    <h4><strong><%= @current.first_name + " " + @current.last_name %></strong></h4>
                    <p>
                        <%= @current.location %>
                    </p>
                    <h5><%= @current.is_scout ? "Scout" : "Influencer"%></h5>
                </div>
                <hr>
                <div class="container-actions">
                    <ul>
                        <li>
                            <%= icon('fas', 'cog') %>
                            Settings</li>
                        <li>
                            <%= icon('fas', 'comment') %>
                            Messages</li>
                        <li>
                            <%= icon('fas', 'star') %>
                            Reviews</li>
                    </ul>
                </div>
            </div>
            <div class="user-bookings">
                <!-- ### -->
                <% @current.bookings.each do |booking| %>

                        <div class="db-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                        url('<%= cl_image_path booking.location.photo, width: 400, height: 300 %>');">
                        <div class="container">
                            <h2> <%= link_to booking.location.name, location_path(booking.location) %></h2>
                            <h3><%= booking.location.user.first_name %></h3>
                            <p>
                                <%= booking.location.coordinates %>
                            </p>
                            <p>$
                                <%= booking.location.price %>
                            </p>
                            <%= cl_image_tag booking.user.photo, class: 'card-user' %>
                    </div>
                    </div>

                    <% end %>
                    <!-- ### -->
            </div>

    <div class="user-bookmarked">
        <% @locations.sample(3).each do |l| %>
        <div class="bookmarked-card">
         <h4><%= l.name %></h4>
          <h5><%= l.description %></h5>
          <%= link_to location_path(l) do %>
          <%= cl_image_tag l.photo, width: 400, height: 300 %>
          <% end %>
        </div>
        <% end %>
    </div>
  </div>
</div>
</div>
